{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["ES2015"],
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
